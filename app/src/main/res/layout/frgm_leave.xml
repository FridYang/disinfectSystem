<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        >

        <!--撤离页面-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/leave_img_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/full_leave"
                android:scaleX="@dimen/LayoutScale"
                android:scaleY="@dimen/LayoutScale"/>

            <ImageView
                android:id="@+id/leave_img_state"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="90dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/btn_stop"
                android:scaleX="@dimen/LayoutScale"
                android:scaleY="@dimen/LayoutScale"/>

            <TextView
                android:id="@+id/leave_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="75dp"
                android:text="00 : 00 : 00"
                android:textColor="#fff"
                android:textSize="70dp"
                android:textStyle="bold"
                android:scaleX="@dimen/LayoutScale"
                android:scaleY="@dimen/LayoutScale"/>

        </FrameLayout>


        <ImageView
            android:id="@+id/leave_img_exit"
            android:layout_width="@dimen/bottomSize"
            android:layout_height="@dimen/bottomSize"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/FrameMargin"
            android:layout_marginBottom="@dimen/FrameMargin"
            android:src="@drawable/ico_home" />
    </FrameLayout>


</LinearLayout>